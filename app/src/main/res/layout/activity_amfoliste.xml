<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AMFOListe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView60"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:text="Satır Sayısı" />

            <EditText
                android:id="@+id/et_amfoliste_ss"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:background="#3EA7A3A3"
                android:gravity="center"
                android:inputType="number"
                android:text="6"
                android:textSize="14sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_amfol_goster"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="#8F005DA3"
                android:gravity="center"
                android:padding="0dp"
                android:text="Göster"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_colcum_1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:hint="Tarih"
                android:text="Tarih"
                android:textColor="#1862A0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_colcum_2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:hint="Saat"
                android:text="Saat"
                android:textColor="#1862A0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_colcum_3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="AğıM"
                android:text="Malzeme"
                android:textColor="#1862A0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_colcum_4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Kömür"
                android:text="Kömür"
                android:textColor="#1862A0"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_amfolist"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </ListView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>