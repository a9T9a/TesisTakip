                            android:gravity="center"
                            android:hint="+160"
                            android:inputType="numberDecimal"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_fma_u90"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:text="+90"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_fma_u90"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|left"
                            android:background="#1A00BEC8"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="+90"
                            android:inputType="numberDecimal"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_fma_a90"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:text="-90"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_fma_a90"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center|left"
                            android:background="#1A00BEC8"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="-90"
                            android:inputType="numberDecimal"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/button_fma_hesap"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#07000000"
                    android:text=">"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fma_u600_2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|left"
                        android:background="#1A00BEC8"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="% +600"
                        android:inputType="numberDecimal"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/tv_fma_u400_2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|left"
                        android:background="#1A00BEC8"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="% +400"
